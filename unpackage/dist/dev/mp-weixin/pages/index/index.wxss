.container {
  padding-bottom: 120rpx;
}
.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.header .logo {
  color: #FF0000;
  font-size: 40rpx;
  font-family: "YouYuan";
  margin-right: 30rpx;
}
.header .search-box {
  flex: 1;
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 10rpx 20rpx;
}
.hot-swiper {
  position: relative;
}
.hot-swiper .swiper-img {
  width: 750rpx;
  height: 300rpx;
}
.hot-swiper .go-button {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 10rpx 40rpx;
  border-radius: 8rpx;
}
.thunder-section {
  padding: 20rpx;
}
.thunder-section .section-header {
  display: flex;
  justify-content: space-between;
}
.thunder-section .section-header .more-btn {
  background: #eee;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
}
.series-tab {
  display: flex;
  padding: 20rpx;
}
.series-tab .tab-item {
  margin-right: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}
.series-tab .tab-item.active {
  font-size: 32rpx;
  color: #FF4081;
  font-weight: bold;
}
.waterfall {
  -webkit-column-count: 2;
          column-count: 2;
  -webkit-column-gap: 20rpx;
          column-gap: 20rpx;
  padding: 20rpx;
}
.waterfall .product-item {
  -webkit-column-break-inside: avoid;
          break-inside: avoid;
  margin-bottom: 20rpx;
}
.waterfall .product-item .product-img {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
}
.tab-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  background: white;
  border-top: 1rpx solid #eee;
}
.tab-bar .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-bar .tab-item .tab-icon {
  width: 48rpx;
  height: 48rpx;
}
.tab-bar .tab-item .tab-text {
  font-size: 24rpx;
}
.tab-bar .tab-item .tab-text.active {
  color: #FF4081;
}
