.activity-page {
  padding: 30rpx;
  background: #FFF5F3;
}
.top-section {
  position: relative;
  padding: 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.top-section .title {
  color: #D4A89A;
  font-size: 36rpx;
  font-weight: bold;
}
.top-section .points-box {
  margin-top: 40rpx;
  display: flex;
  align-items: flex-end;
}
.top-section .points-box .points-left {
  position: relative;
}
.top-section .points-box .points-left .points-num {
  color: #FF4081;
  font-size: 80rpx;
  line-height: 1;
}
.top-section .points-box .points-left .coin-icon {
  position: absolute;
  right: -50rpx;
  bottom: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.top-section .points-box .points-label {
  color: #D4A89A;
  font-size: 28rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}
.top-section .tips {
  display: block;
  margin-top: 20rpx;
  color: #D4A89A;
  font-size: 24rpx;
}
.sign-section {
  margin-top: 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
}
.sign-section .sign-calendar .calendar-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.sign-section .sign-calendar .calendar-row .day-item {
  position: relative;
  width: 160rpx;
  height: 200rpx;
}
.sign-section .sign-calendar .calendar-row .day-item .heart-bg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.sign-section .sign-calendar .calendar-row .day-item .day-text {
  position: absolute;
  top: 30rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  color: #333;
  font-size: 28rpx;
  z-index: 2;
}
.sign-section .sign-calendar .calendar-row .day-item .coin-small {
  position: absolute;
  top: 90rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 40rpx;
}
.sign-section .sign-calendar .calendar-row .day-item .points-add {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  color: #333;
  font-size: 24rpx;
}
.sign-section .sign-btn {
  margin-top: 40rpx;
  background: #FF4081;
  border-radius: 12rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sign-section .sign-btn text {
  color: #B32D5F;
  font-size: 32rpx;
  font-weight: bold;
}
.activity-grid {
  margin-top: 40rpx;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 0 10rpx;
}
.activity-grid .activity-item {
  height: 100rpx;
  background-size: cover;
  border-radius: 12rpx;
}
