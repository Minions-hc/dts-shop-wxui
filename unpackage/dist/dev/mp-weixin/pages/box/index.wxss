.main-tab {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}
.main-tab .tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}
.main-tab .tab-item.active {
  font-weight: bold;
  color: #000;
}
.sub-tab {
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
}
.sub-tab .sub-item {
  padding: 10rpx 20rpx;
  margin-right: 30rpx;
  font-size: 28rpx;
  position: relative;
}
.sub-tab .sub-item.active {
  font-weight: bold;
}
.sub-tab .sub-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 60rpx;
  height: 10rpx;
  background: #D4B483;
  border-radius: 10rpx;
}
.sub-tab .sub-item .tips {
  display: block;
  color: #999;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}
.sub-tab .lock-icon {
  position: absolute;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
}
.product-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 30rpx;
}
.product-grid .product-item {
  position: relative;
  text-align: center;
}
.product-grid .product-item .check-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}
.product-grid .product-item .product-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
}
.product-grid .product-item .product-name {
  display: block;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.product-grid .product-item .product-price {
  color: #FF4444;
  font-size: 26rpx;
}
.operation-bar {
  padding: 30rpx;
}
.operation-bar .btn-group {
  display: flex;
  gap: 30rpx;
}
.operation-bar .btn-group .btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
.operation-bar .btn-group .btn.ship-btn {
  color: #666;
}
.operation-bar .btn-group .btn.ship-btn.active {
  color: #333;
}
.operation-bar .btn-group .btn.market-btn {
  background: #FFF;
  border: 2rpx solid #D4B483;
  color: #D4B483;
}
